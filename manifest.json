{
  "name": "Page Redder",
  "manifest_version": 3,
  "version": "0.1",
  "description": "Turns the page red when you click the icon",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["*://some-website/*"],
    "runAt": "document_idle"
  }],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  }
}
